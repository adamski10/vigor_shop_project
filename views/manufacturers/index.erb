<h2 class="stock">Manufacturers list</h2>
<table class="table" style="width:100%">
  <tr>
    <th>Manufacturer name</th>
    <th>Category</th> 
    <th>Contact details</th>
  </tr>
  <% @manufacturers.each do |manufacturer| %>
  <tr>
    <td><a class="link" href="manufacturers/<%= manufacturer.id %>"><%= manufacturer.name %></td>
    <td><%= manufacturer.get_category_name %></td>
    <td><%= manufacturer.contact_details %></td>
  </tr>
  <% end %>
</table>